<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="renderer" content="webkit">
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit"/>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge"/>
	<title>百渊金服 • 借款人列表</title>
    <link rel="stylesheet" href="/styles/borrowers/index.css?v=20170908163206"/>
</head>
<body>
   <% include ../common/header.ejs %>

  <div class="container clearfix">
   <% include ../common/aside_menu.ejs %>
   <div class="right-container fr">
     <div class="navigation">
       <a href="/" class="home_ico"></a>
       <em class="navigation_ico"></em>
       <span>借款人列表</span>
     </div>
     <div class="content" id="app">
       <div class="cont-title">
         <i></i>
         <span>借款人列表</span>
         <a href="/borrowers/bind" class="title-btn2">邦定借款人</a>
         <a href="/borrowers/add" class="title-btn1">新增借款人</a>
       </div>
       <div class="search">
            <div class="search_wraper clearfix">
              <div class="search_item">
                <label>手机号</label>
                 <input type="tel" class="user-ui-input" v-model="params.mobile" placeholder="请输入手机号">
               </div>
               <div class="search_item">
                   <label>姓名</label>
                   <input type="text" class="user-ui-input" v-model="params.name" placeholder="请输入姓名">
               </div>
               <div class="search_item">
                   <label>注册时间</label>
                   <div class="user-ui-calendar">
                     <input type="text" class="user-ui-input" readonly="readonly" v-model="params.from" id="fromTime" placeholder="请输入开始时间"/>
                   </div>
                   <em>至</em>
                   <div class="user-ui-calendar">
                     <input type="text" class="user-ui-input" readonly="readonly" v-model="params.to" id="endTime" placeholder="请输入结束时间"/>
                   </div>
               </div>
            </div>
          <div class="search_submit clearfix">
            <button @click="query">查询</button>
            <button @click="reset">重置</button>
          </div>
       </div>

       <div class="list_container">
         <dl class="cont_list">
           <dt>
             <span class="borrowers_number">编号</span>
             <span class="borrowers_name">姓名</span>
             <span class="borrowers_phone">手机</span>
             <span class="borrowers_regTime">注册时间</span>
             <span>操作</span>
           </dt>
         <% if(borrowersList && borrowersList.length){%>
             <% borrowersList.forEach(function(item,index){%>
             <dd>
                 <span class="borrowers_number"><%-item.id%></span>
                 <span class="borrowers_name"><%-item.name%></span>
                 <span class="borrowers_phone"><%-item.mobile%></span>
                 <span class="borrowers_regTime"><%-item.created_at%></span>
                 <a class="list_action" href="/borrowers/<%-item.id%>">详情</a>
             </dd>
             <%})%>
        <%}else{%>
          <% include ../common/list_empty.ejs %>
         <%}%>
         </dl>
       </div>
       <% if(borrowersList && borrowersList.length){%>
         <div class="pagination">
             <ul class="pagination_list">
                 <% include ../common/pagination.ejs %>
             </ul>
         </div>
       <%}%>
     </div>
       <% include ../common/footer.ejs%>
   </div>
  </div>
   <div class="ui-calendar" id="calendar"></div>
   <script type="text/javascript" src="/dist/scripts/borrowers/index.js?v=20170908163206"></script>
</body>
</html>

