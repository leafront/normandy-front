<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>百渊金服 • 借款人列表</title>
    <link rel="stylesheet" href="/styles/borrowers/index.css?v=20170806140528"/>
</head>
<body>
   <% include ../common/header.ejs %>

  <div class="container clearfix">
   <% include ../common/aside_menu.ejs %>
   <div class="right-container fr">
     <div class="navigation">
       <a href="/" class="home_ico"></a>
       <em class="navigation_ico"></em>
       <span>借款人列表</span>
     </div>
     <div class="content">
       <div class="cont-title">
         <i></i>
         <span>借款人列表</span>
         <a href="#" class="title-btn2">邦定借款人</a>
         <a href="#" class="title-btn1">新增借款人</a>
       </div>
       <div class="search">
          <div class="search_wraper clearfix">
              <div class="search_item">
                <label>手机号</label>
                 <input type="text" class="user-ui-input" placeholder="请输入手机号"/>
               </div>
               <div class="search_item">
                   <label>姓名</label>
                   <input type="text" class="user-ui-input" placeholder="请输入姓名"/>
               </div>
               <div class="search_item">
                   <label>注册时间</label>
                   <div class="user-ui-calendar">
                     <input type="text" class="user-ui-input" placeholder="请输入开始时间"/>
                     <em>至</em>
                     <input type="text" class="user-ui-input" placeholder="请输入开始时间"/>
                   </div>
               </div>
          </div>
          <div class="search_submit clearfix">
            <button>查询</button>
            <button>重置</button>
          </div>
       </div>

       <div class="list_container">
         <dl class="cont_list">
           <dt>
             <span class="borrowers_number">编号</span>
             <span class="borrowers_name">姓名</span>
             <span class="borrowers_phone">手机</span>
             <span class="borrowers_regTime">注册时间</span>
             <span>操作</span>
           </dt>
         <% if(borrowersList){%>
             <% borrowersList.forEach(function(item,index){%>
             <dd>
                 <span class="borrowers_number"><%-item.id%></span>
                 <span class="borrowers_name"><%-item.name%></span>
                 <span class="borrowers_phone"><%-item.mobile%></span>
                 <span class="borrowers_regTime"><%-item.created_at%></span>
                 <a class="list_action" href="/borrowers/detail/<%-item.id%>">详情</a>
             </dd>
             <%})%>
         <%}%>
         </dl>
       </div>
       <div class="pagination">
         <ul class="pagination_list">
           <li><a href="#">首页</a></li>
           <li><a href="#">上一页</a></li>
           <li><a href="#">1</a></li>
           <li><a href="#">2</a></li>
           <li><a href="#">3</a></li>
           <li><a href="#">4</a></li>
           <li><a href="#">5</a></li>
           <li><a href="#">...</a></li>
           <li><a href="#">下一页</a></li>
           <li><a href="#">尾页</a></li>
         </ul>
       </div>
     </div>
       <% include ../common/footer.ejs%>
   </div>
  </div>
   <script type="text/javascript" src="/dist/scripts/borrowers/index.js?v=20170806140528"></script>
</body>
</html>

