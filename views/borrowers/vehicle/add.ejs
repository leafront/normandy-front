<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>用户详情</title>
    <link rel="stylesheet" href="/styles/borrowers/vehicle/add.css"/>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
</head>
<body>
<%include ../../common/header.ejs%>
<div class="container clearfix">
    <% include ../../common/aside_menu.ejs %>
    <div class="right-container fr">
        <div class="navigation">
            <a href="/" class="home_ico"></a>
            <em class="navigation_ico"></em>

            <a href="/borrowers" class="navigation_link">借款人列表</a>

            <em class="navigation_ico"></em>

            <a href="/borrowers/<%-detailId%>" class="navigation_link">用户详情</a>

            <em class="navigation_ico"></em>
            <span>新增车辆</span>

        </div>
        <div class="content">
            <div class="cont-title">
                <i></i>
                <span>新增车辆</span>
            </div>
            <div class="vehicle_cont">
               <div class="vehicle_wraper clearfix">
                  <div class="vehicle_item">
                    <label>车辆类型</label>
                      <div class="drop_menu drop_menu_car">
                          <span class="active js_select"><%-carType[0].name%></span>
                          <ul class="drop_menu_list">
                          <% carType.forEach(function(item){%>
                            <li value="<%-item.value%>">
                                <a href="javascript:;"><%-item.name%></a>

                            </li>
                          <%})%>

                          </ul>
                      </div>
                  </div>
                   <div class="vehicle_item">
                       <label>品牌类型</label>
                       <input type="text" class="user-ui-input vehicle-ui-input user-disable" readonly="readonly" id="js_brand" placeholder="点击选择品牌型号"/>
                   </div>
               </div>
                <div class="vehicle_wraper clearfix">
                    <div class="vehicle_item">
                        <label>车牌号</label>
                        <input type="text" class="user-ui-input vehicle-ui-input" placeholder="沪A12345"/>
                    </div>
                    <div class="vehicle_item">
                        <label>车架号</label>
                        <input type="text" class="user-ui-input vehicle-ui-input" placeholder="17位唯一车架号"/>
                    </div>
                </div>
                <div class="vehicle_wraper clearfix">
                    <div class="vehicle_item">
                        <label>发动机号</label>
                        <input type="text" class="user-ui-input vehicle-ui-input" placeholder="发动机号"/>
                    </div>
                    <div class="vehicle_item">
                        <label>出厂日期</label>
                        <input type="text" class="user-ui-input vehicle-ui-input" placeholder="出厂日期"/>
                    </div>
                </div>
                <div class="vehicle_wraper clearfix">
                    <div class="vehicle_item">
                        <label>颜色</label>
                        <div class="drop_menu drop_menu_color">
                            <span class="active js_select">选择车辆颜色</span>
                            <ul class="drop_menu_list">
                                <% colorList.forEach(function(item){%>

                                  <li data-value="<%-item.value%>">
                                      <a href="javascript:;"><%-item.name%></a>
                                      <span style="background:<%-item.color%>"></span>
                                  </li>
                                <%})%>
                            </ul>
                        </div>
                    </div>
                    <div class="vehicle_item">
                        <label>排量</label>
                        <input type="text" class="user-ui-input vehicle-ui-input" placeholder="排量"/>
                    </div>
                </div>
                <div class="vehicle_wraper clearfix">
                  <div class="vehicle_item">
                     <label>变速</label>
                     <strong class="shiftingType active" data-shifting="0">手动</strong>
                     <strong class="shiftingType" data-shifting="1">自动</strong>
                  </div>
                  <div class="vehicle_item">
                    <label>驱动类型</label>
                    <strong class="driverType active" data-driver="0">两驱</strong>
                    <strong class="driverType" data-driver="1">四驱</strong>
                  </div>
                </div>
                <div class="modify-button clearfix">
                    <button class="js_submit">确认</button>
                    <button class="js_cancel">放弃</button>
                </div>
            </div>
        </div>
        <% include ../../common/footer.ejs %>
    </div>
</div>
<div class="popup_wraper" id="carPopup">
    <div class="popup_title">
        <h4>选择品牌车型</h4>
    </div>
    <div class="carPopup">
       <div class="carPopup_nav">
         <ul class="carNav_list">
         </ul>
       </div>

      <div class="carPopup_item">
          <h4>请选择车辆品牌</h4>
        <div class="carList_wraper" id="brandList">
        </div>
      </div>
      <div class="carPopup_item">
        <h4>请选择车辆系列</h4>
        <div class="carList_wraper" id="carType">
        </div>
      </div>
      <div class="carPopup_item">
        <h4>请选择车辆型号</h4>
        <div class="carList_wraper" id="carModel">
        </div>
      </div>
    </div>
    <div class="popup_submit clearfix">
        <button class="js_confirm">确定</button>
        <button class="js_cancel">取消</button>
    </div>
</div>
<div class="popup_mask"></div>

<div class="ui-calendar" id="calendar"></div>
<script src="https://cdn.bootcss.com/jquery/3.1.0/jquery.min.js"></script>
<script type="text/javascript" src="/scripts/lib/ejs.js"></script>
<script type="text/javascript" src="/scripts/widget/calendar.js"></script>

<script type="text/javascript">

    var calendar = new Calendar({
      startYear: 2000
    })

    calendar.showCalendar();
</script>
<script type="text/javascript" src="/dist/scripts/borrowers/vehicle/add.js"></script>
</body>
</html>

